@{
    ViewData["Title"] = "İletişim";
}

<div class="contact-container">
    <h1>İletişim</h1>
    <form method="post" asp-action="Iletisim" class="contact-form">
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" name="Ad" required />
        </div>
        <div class="form-group">
            <label>E-posta</label>
            <input type="email" name="Email" required />
        </div>
        <div class="form-group">
            <label>Mesaj</label>
            <textarea name="Mesaj" rows="5" required></textarea>
        </div>
        <button type="submit" class="contact-btn">Gönder</button>
    </form>

    @if (ViewBag.Basarili != null)
    {
        <div class="contact-success">@ViewBag.Basarili</div>
    }
    @if (ViewBag.Hata != null)
    {
        <div class="contact-error">@ViewBag.Hata</div>
    }
</div>

<style>
.contact-container {
    max-width: 400px;
    margin: 40px auto;
    background: #fff;
    padding: 32px 24px;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(0,0,0,0.08);
}
.contact-container h1 {
    text-align: center;
    margin-bottom: 24px;
    color: #007cba;
}
.contact-form .form-group {
    margin-bottom: 18px;
}
.contact-form label {
    display: block;
    margin-bottom: 6px;
    color: #333;
    font-weight: 500;
}
.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 1rem;
    background: #f9f9f9;
    transition: border 0.2s;
}
.contact-form input:focus,
.contact-form textarea:focus {
    border-color: #007cba;
    outline: none;
}
.contact-btn {
    width: 100%;
    background: #007cba;
    color: #fff;
    border: none;
    padding: 12px;
    border-radius: 6px;
    font-size: 1.1rem;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.2s;
}
.contact-btn:hover {
    background: #005a87;
}
.contact-success {
    margin-top: 18px;
    color: #1a7f37;
    background: #e7f9ed;
    padding: 10px;
    border-radius: 6px;
    text-align: center;
}
.contact-error {
    margin-top: 18px;
    color: #b91c1c;
    background: #fee2e2;
    padding: 10px;
    border-radius: 6px;
    text-align: center;
}
</style>